var pen;

function penColor(color) {
    ctx.fillStyle = color;
}

function penUp() {
    pen = false;
}

function penDown() {
    pen = true;
}

function penLineTo(x,y) {
     if (pen) {
        ctx.lineTo(x, y);
        ctx.stroke();
     }
}

function movePen(x,y) {
       ctx.moveTo(x, y);
}

function penSize(size) {
       ctx.lineWidth = size;
}
